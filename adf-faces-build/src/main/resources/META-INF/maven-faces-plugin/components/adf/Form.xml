<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:af="http://myfaces.apache.org/adf/faces"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:mfp="http://myfaces.apache.org/maven-faces-plugin"
              xmlns:mafp="http://myfaces.apache.org/maven-adf-faces-plugin"
              xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <component>
    <description><![CDATA[The form control is the base abstraction for a submitted
region of a page.]]></description>
    <icon>
      <small-icon>/oracle/adfdtinternal/view/rich/metadata/icons/baseForm.png</small-icon>
    </icon>
    <component-type>org.apache.myfaces.adf.Form</component-type>
    <component-class>org.apache.myfaces.adf.component.UIXForm</component-class>
    <property>
      <description><![CDATA[whether the form was submitted on this request]]></description>
      <property-name>submitted</property-name>
      <property-class>boolean</property-class>
      <default-value>false</default-value>
      <property-extension>
        <mfp:tag-attribute-excluded>true</mfp:tag-attribute-excluded>
        <mfp:transient>yes</mfp:transient>
      </property-extension>
    </property>
    <component-extension>
      <mfp:component-family>org.apache.myfaces.adf.Form</mfp:component-family>
      <mfp:component-supertype>org.apache.myfaces.adf.ComponentBase</mfp:component-supertype>
      <mfp:renderer-type>org.apache.myfaces.adf.Form</mfp:renderer-type>
      <mfp:tag-class>org.apache.myfaces.adfinternal.taglib.UIXFormTag</mfp:tag-class>
      <mfp:author>Adam Winer</mfp:author>
      <mfp:tag-class-modifier>abstract</mfp:tag-class-modifier>
    </component-extension>
  </component>
</faces-config>

