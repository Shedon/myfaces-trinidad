<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:afh="http://myfaces.apache.org/adf/faces/html"
              xmlns:mfp="http://myfaces.apache.org/maven-faces-plugin"
              xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <component>
    <description><![CDATA[<html>
          The html tag generates the &lt;html&gt; element for an HTML page.</html>]]></description>
    <icon>
      <small-icon>/oracle/adfdtinternal/view/rich/metadata/icons/html.png</small-icon>
    </icon>
    <component-type>org.apache.myfaces.adf.HtmlHtml</component-type>
    <component-class>org.apache.myfaces.adf.component.html.HtmlHtml</component-class>
    <component-extension>
      <mfp:component-family>org.apache.myfaces.adf.Html</mfp:component-family>
      <mfp:component-supertype>org.apache.myfaces.adf.ComponentBase</mfp:component-supertype>
      <mfp:renderer-type>org.apache.myfaces.adf.Html</mfp:renderer-type>
      <mfp:tag-name>afh:html</mfp:tag-name>
      <mfp:tag-class>org.apache.myfaces.adfinternal.taglib.html.HtmlHtmlTag</mfp:tag-class>
      <mfp:long-description><![CDATA[<html:p>
          The html tag generates the &lt;html&gt; element for an HTML page.
It will automatically generate &quot;locale&quot; and &quot;dir&quot; attributes
based on the current locale.
          </html:p>]]>
      </mfp:long-description>
      <mfp:example>
        <mfp:source-code><![CDATA[<afh:html>
  <afh:head title="Document title"/>

  <afh:body>
    <af:panelPage/>      
  </afh:body>]]>
        </mfp:source-code>
      </mfp:example>
      <mfp:author>Adam Winer</mfp:author>
      <mfp:component-metadata>
        <mfp:preferred-children>afh:head afh:body</mfp:preferred-children>
      </mfp:component-metadata>
      <mfp:uix2-local-name>html</mfp:uix2-local-name>
    </component-extension>
  </component>
</faces-config>
