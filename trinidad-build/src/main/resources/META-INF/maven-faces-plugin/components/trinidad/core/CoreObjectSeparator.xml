<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:af="http://myfaces.apache.org/trinidad"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:mfp="http://myfaces.apache.org/maven-faces-plugin"
              xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <component>
    <description>
      <![CDATA[The objectSeperator is used anywhere to create a horizontal separator 
between items.]]>
    </description>
    <icon>
      <small-icon>/org/apache/myfaces/trinidad/metadata/icons/objectSeparator.png</small-icon>
    </icon>
    <component-type>org.apache.myfaces.trinidad.CoreObjectSeparator</component-type>
    <component-class>org.apache.myfaces.trinidad.component.core.output.CoreObjectSeparator</component-class>
    <xi:include href="includes/CommonAttrs.xml" xpointer="/faces-config/component/*"/>
    <component-extension>
      <mfp:component-supertype>org.apache.myfaces.trinidad.Object</mfp:component-supertype>
      <mfp:renderer-type>org.apache.myfaces.trinidad.Separator</mfp:renderer-type>
      <mfp:tag-name>af:objectSeparator</mfp:tag-name>
      <mfp:tag-class>org.apache.myfaces.trinidadinternal.taglib.core.output.CoreObjectSeparatorTag</mfp:tag-class>
      <mfp:long-description><![CDATA[<html:p>
          The objectSeparator creates a horizontal separator.
         </html:p>]]>
      </mfp:long-description>
      <mfp:example>It doesn't get any simpler than this one.
        <mfp:source-code>&lt;af:objectSeparator/&gt;</mfp:source-code>
      </mfp:example>
      <mfp:author>Blake Sullivan</mfp:author>
      <mfp:component-metadata>
        <mfp:accepts-child-components>false</mfp:accepts-child-components>
        <mfp:group>${md:getTranslatedString("PALETTE_OUTPUT")}</mfp:group>
      </mfp:component-metadata>
      <mfp:uix2-local-name>separator</mfp:uix2-local-name>
    </component-extension>
  </component>
</faces-config>
