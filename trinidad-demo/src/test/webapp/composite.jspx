<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
          xmlns:f="http://java.sun.com/jsf/core"
          xmlns:h="http://java.sun.com/jsf/html"          
          xmlns:af="http://myfaces.apache.org/adf/faces"
          xmlns:afh="http://myfaces.apache.org/adf/faces/html" 
          xmlns:afdemo="http://myfaces.apache.org/adffacesdemo" >
  <jsp:directive.page contentType="text/html;charset=iso-8859-1"/>
  <f:view>
    <afh:html>
      <afh:head title="Test of composite component"/>
    
      <afh:body>
       <af:panelPage>
       <af:form>
         <af:messages/>
         <af:panelGroup layout="vertical">
           <afdemo:dateField id="dateField" value="#{date.date1}"/>
           <af:message for="dateField"/>
           <af:outputText value="Date is now #{date.date1}"/>

           <af:objectSeparator/>

    <!-- Use a normal inputText, but use binding to force the renderer type -->
           <h:inputText id="dateInput" value="#{date.date2}" binding="#{compositeTest.dateInput}"/>

           <af:message for="dateInput"/>
           <af:outputText value="Date is now #{date.date2}"/>

           <af:objectSeparator/>

           <af:commandButton text="Submit"/>
         </af:panelGroup>
       </af:form>
       </af:panelPage>
      </afh:body>
    </afh:html>
  </f:view>
</jsp:root>
