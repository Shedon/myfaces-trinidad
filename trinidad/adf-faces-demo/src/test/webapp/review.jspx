<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="1.2"
          xmlns:f="http://java.sun.com/jsf/core"
          xmlns:h="http://java.sun.com/jsf/html"
          xmlns:afh="http://myfaces.apache.org/adf/faces/html" 
          xmlns:af="http://myfaces.apache.org/adf/faces" >
  <jsp:directive.page contentType="text/html;charset=iso-8859-1"/>
  <f:view>
    <afh:html>
      <afh:head title="Confirm Order Information"/>
      <afh:body>
       <af:form>
       
        <af:panelPage>
          <af:messages/>
          <af:panelHeader text="Review Order Information">
            <af:panelHeader text="Customer Information">
              <af:panelForm>        
                <af:inputText readOnly="true" label="First Name"  value="#{order.customer.firstName}"/>   
                <af:inputText readOnly="true" label="Last Name"  value="#{order.customer.lastName}"/>   
              </af:panelForm>
            </af:panelHeader>
            <af:panelHeader text="Credit Card Information">
              <af:panelForm>       
               <af:inputText readOnly="true" label="First Name"  value="#{order.creditCard.firstName}"/>   
               <af:inputText readOnly="true" label="Last Name"  value="#{order.creditCard.lastName}"/>      
               <af:inputText readOnly="true" label="Card Number" value="#{order.creditCard.number}"/>   
               <af:inputText readOnly="true" label="Expiration Date" value="#{order.creditCard.expirationDate}"/>   
              </af:panelForm>
            </af:panelHeader>
            <af:panelHeader text="Billing Address">
              <af:panelForm>     
               <af:inputText readOnly="true" label="First Name"  value="#{order.billingAddress.firstName}"/>   
               <af:inputText readOnly="true" label="Last Name"  value="#{order.billingAddress.lastName}"/>         
               <af:inputText readOnly="true" label="Street Address" value="#{order.billingAddress.streetAddress}"/>   
               <af:inputText readOnly="true" label="City" value="#{order.billingAddress.city}"/>   
               <af:inputText readOnly="true" label="State" value="#{order.billingAddress.state}"/>   
               <af:inputText readOnly="true" label="Zip Code" value="#{order.billingAddress.zip}"/>   
              </af:panelForm>
            </af:panelHeader> 
            <af:panelHeader text="Shipping Address">
              <af:panelForm>     
                <af:inputText readOnly="true" label="First Name"  value="#{order.shippingAddress.firstName}"/>   
                <af:inputText readOnly="true" label="Last Name"  value="#{order.shippingAddress.lastName}"/>      
                <af:inputText readOnly="true" label="Street Address" value="#{order.shippingAddress.streetAddress}"/>   
                <af:inputText readOnly="true" label="City" value="#{order.shippingAddress.city}"/>   
                <af:inputText readOnly="true" label="State" value="#{order.shippingAddress.state}"/>   
                <af:inputText readOnly="true" label="Zip Code" value="#{order.shippingAddress.zip}"/>    
              </af:panelForm>
            </af:panelHeader>
            <af:panelButtonBar>        
              <af:singleStepButtonBar selectedStep="5" maxStep="5" 
                previousActionListener="#{order.processPrevious}" 
                previousAction="#{order.getPreviousAction}"/>
              <af:commandButton action="confirm" text="Confirm Order"/>
            </af:panelButtonBar>
          </af:panelHeader>
         </af:panelPage>   
    
       </af:form>
      </afh:body>
    </afh:html>
  </f:view>
</jsp:root>
