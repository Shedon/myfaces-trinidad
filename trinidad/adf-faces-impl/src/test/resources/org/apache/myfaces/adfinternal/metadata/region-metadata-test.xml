<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd" [
  <!ELEMENT region-jsp-ui-def (#PCDATA)>
  <!ELEMENT required (#PCDATA)>
  ]>
<faces-config>
  <component>
    <component-type>org.apache.myfaces.adf.view.test.TestRegion1</component-type>
    <component-class>
      org.apache.myfaces.adf.component.UIXRegion
    </component-class>
    <component-extension>
      <region-jsp-ui-def>/regions/testRegion1.jspx</region-jsp-ui-def>
    </component-extension>
    <attribute>
      <attribute-name>stock</attribute-name>
      <attribute-class>int</attribute-class>
      <attribute-extension>
        <required>true</required>
      </attribute-extension>
    </attribute>
    <attribute>
      <attribute-name>desc</attribute-name>
      <attribute-class>java.lang.String</attribute-class>
      <default-value>Test</default-value>
    </attribute>
  </component>

  <component>
    <component-type>
      org.apache.myfaces.adf.view.test.TestRegion2
    </component-type>
    <component-class>
      org.apache.myfaces.adf.component.UIXRegion
    </component-class>
    <component-extension>
      <region-jsp-ui-def>
        /regions/testRegion2.jspx
      </region-jsp-ui-def>
    </component-extension>
  </component>

</faces-config>

