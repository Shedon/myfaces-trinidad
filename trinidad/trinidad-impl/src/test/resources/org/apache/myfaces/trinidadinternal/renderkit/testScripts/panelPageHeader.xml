<test xmlns="http://myfaces.apache.org/adf/view/faces/test"
       xmlns:af="http://myfaces.apache.org/adf/view/faces">
  <base-component af:type="org.apache.myfaces.trinidad.CorePanelPageHeader">
     <component af:type="org.apache.myfaces.trinidad.CoreMenuTabs"
                af:facet="navigation1" >
        <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                   text="tab1"/>
        <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                   text="tab2"/>
        <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                   text="tab3"/>
    </component>
    <component af:type="org.apache.myfaces.trinidad.CoreMenuBar"
                   af:facet="navigation2" >
           <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                      text="bar1"/>
           <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                      text="bar2"/>
           <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                      text="bar3"/>
     </component>
   <component af:type="org.apache.myfaces.trinidad.CoreMenuButtons"
                   af:facet="navigationGlobal" >
           <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                      text="button1"/>
           <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                      text="button2"/>
           <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                      text="button3"/>
    </component>
     <component af:type="org.apache.myfaces.trinidad.CoreMenuChoice"
                     af:facet="menuSwitch" >
             <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                        text="choice1"/>
             <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                        text="choice2"/>
             <component af:type="org.apache.myfaces.trinidad.CoreCommandNavigationItem"
                        text="choice3"/>
    </component>
    <component af:type="org.apache.myfaces.trinidad.CoreObjectImage"
                af:facet="branding"
                source="/foo/foo.gif"/>
    <component af:type="org.apache.myfaces.trinidad.CoreObjectImage"
                af:facet="brandingApp"
                source="/foo/bar.gif"/>
     <component af:type="org.apache.myfaces.trinidad.CoreOutputFormatted"
                af:facet="brandingAppContextual"
                value="Customer &lt;b&gt;InContextBranding Company - Menlo Park&lt;/b&gt;"
                styleUsage="inContextBranding"/>
     <component af:type="org.apache.myfaces.trinidad.CoreOutputFormatted"
                af:facet="search"
                value="the search facet"/>
  </base-component>


  <!-- ungrouped -->
  <!-- The chromeType tested in separate file because if you have brandingAppContextual set the chromeType does nothing -->
  <!-- enum-test name="chromeType"/ -->
  <!--attribute-test name="partialTriggers" value="x y" matchesBase="true"/-->


  <!-- core -->
  <attribute-test name="id" value="myid"/>
  <!--attribute-test name="inlineStyle" value="background-color:red"/-->
  <!--boolean-test name="rendered"/-->
  <attribute-test name="shortDesc" value="my short desc"/>
  <attribute-test name="styleClass" value="mystyle"/>

  <!-- javascript -->
  <js-test/>

</test>
